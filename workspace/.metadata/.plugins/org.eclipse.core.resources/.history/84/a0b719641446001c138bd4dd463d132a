package java05.classBasic.Ex02;
//외부에 클래스 생성
class Computer {
//	private은 같은 클래스에서만 사용 가능
//	private을 통해 외부 클래스에서 접근을 막는 기법을 캡슐화라고 한다.
	private String CPU;
	private int RAM;
	private int HDD;
//	setter & getter
//	마우스 오른쪽 클릭 source -> generate getter and setter
//	이후 나타난 창에서 select all 후 generate 하면 아래와 같이 메소드가 만들어짐
	public String getCPU() {
		return CPU;
	}
	public void setCPU(String cPU) {
		CPU = cPU;
	}
	public int getRAM() {
		return RAM;
	}
	public void setRAM(int rAM) {
		RAM = rAM;
	}
	public int getHDD() {
		return HDD;
	}
	public void setHDD(int hDD) {
		HDD = hDD;
	}
}
