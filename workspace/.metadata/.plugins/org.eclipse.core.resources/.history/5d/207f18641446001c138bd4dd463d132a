package java05.classBasic.Ex01;

//Car 클래스를 만들고 3개의 멤버 필드 설정
class Car{
	String outColor;
	int wheel;
	int engine;
}

public class Ex01 {
	public static void main(String[] args) {
//		내가 만든 클래스를 인스턴스화 시킴
		Car car = new Car();
		
//		인스턴스 내부의 객체에 데이터 저장
		car.outColor="red";
		car.wheel = 17;
		car.engine = 2000;
		
//		인스턴스 내부에 저장된 객체 호출
		System.out.println("색상 : "+car.outColor);
		System.out.println("휠 : "+car.wheel);
		System.out.println("배기량 : "+car.engine);
	}

}


